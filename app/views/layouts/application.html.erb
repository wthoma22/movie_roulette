<!DOCTYPE html>
<html>
  <head>
    <title>MovieRoulette</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Proza+Libre:500" rel="stylesheet">
  </head>

  <body>
    <p class="success"><%= flash[:success] %></p>

    <header class="navbar navbar-inverse">
      <div class="navbar-class">
        <div class="container">

          <ul class="nav navbar-nav">
          <% if current_user %>
            <li><%= link_to "Logout", '/logout', method: :delete, class: "nav-link" %></li>
          <% else %>
            <li><%= link_to "Login", '/login', class: "nav-link" %></li>
          <% end %>
            <li><%= link_to "Create Account", new_user_path, class: "nav-link" %>
          </ul>

        </div>
      </div>
    </header>
  <%= yield %>
  </body>
</html>
