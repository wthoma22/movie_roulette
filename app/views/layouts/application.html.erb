<!DOCTYPE html>
<html>
  <head>
    <title>MovieRoulette</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= flash[:success] %>

    <% if current_user %>
      <%= link_to "Logout", '/logout', method: :delete %>
    <% else %>
      <%= link_to "Login", '/login' %>
    <% end %>

    <%= link_to "Create Account", new_user_path %>

    <%= yield %>
  </body>
</html>
